@model List<DL.Models.User>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projects</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
            <a  class="btn btn-tool" title="New" href="@Url.Action("User","Accounts")">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        UserName
                    </th>
                    <th style="width: 30%">
                        User Role
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                        <td>
                            @user.Id
                        </td>
                        <td>
                            @user.UserName
                        </td>
                        <td>
                            @Enum.GetName(typeof(BL.Enums.SystemRolesEnum), user.UserType)
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="@Url.Action("User","Accounts",new {user.Id})">
                                <i class="fas fa-pencil-alt">
                                </i>
                                View
                            </a>
                            @*<a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>